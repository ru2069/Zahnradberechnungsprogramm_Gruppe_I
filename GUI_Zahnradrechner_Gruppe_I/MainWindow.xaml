<Window x:Class="GUI_Zahnradrechner_Gruppe_I.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_Zahnradrechner_Gruppe_I"
        mc:Ignorable="d"
        Title="ZZ Zahnradrechner" Height="768" Width="1366" Icon="/Mini Logo 2.png" >
    <Grid Background="#FFA6A6A6">
        <Label Content="Willkommen beim ZZ Zahnradrechner!" FontFamily="Corbel Light" FontSize="40" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Image  Stretch="Uniform" Width="130" Height="130" HorizontalAlignment="Right" VerticalAlignment="Top" Source="/ZZ Logo 2.png" />

        <TabControl Width="1349" Height="630" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <TabItem Header="Außenverzahnung" FontFamily="Corbel Light" FontSize="16">
                <Canvas HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" Width="1366" Height="600" Background="#FFD8D8D8">
                    <Label Content="Modul:" HorizontalAlignment="Left" Margin="0,5,0,0"/>
                    <TextBox x:Name="modul" TextWrapping="Wrap" Width="167" Margin="50,5,0,0" Canvas.Left="55" Canvas.Top="4" FontFamily="Calibri Light"/>
                    <Label Content="Zähnezahl:" Canvas.Top="43" HorizontalAlignment="Left"/>
                    <TextBox x:Name="zähnezahl" TextWrapping="Wrap" Width="167" Margin="50,0,0,0" Canvas.Left="55" Canvas.Top="47" FontFamily="Calibri Light"/>
                    <Label Content="Verzahnung:" Canvas.Top="86" HorizontalAlignment="Left"/>
                    <RadioButton x:Name="rdbtn_gerade" IsChecked="True" Canvas.Left="105" Canvas.Top="94"/>
                    <Label Content="Gerade" Canvas.Left="120" Canvas.Top="86"/>
                    <RadioButton x:Name="rdbtn_schräg" Canvas.Left="180" Canvas.Top="94"/>
                    <Label Content="Schräg" Canvas.Left="195" Canvas.Top="86"/>
                    <Button Content="Berechne" Canvas.Top="510" Height="60" Width="297" Click="Button_Click" Canvas.Left="27" Background="White"/>
                    <Label Content="Teilkreisdurchmesser d:" Canvas.Left="536" Canvas.Top="5"/>
                    <Label x:Name="teilkreisdurchmesser" Canvas.Left="701" Canvas.Top="5" FontFamily="Calibri Light"/>
                </Canvas>

            </TabItem>
            <TabItem Header="Innenverzahnung" FontFamily="Corbel Light" FontSize="16">
                <Grid Background="#FFE5E5E5">
                    <Button Content="Berechne" Canvas.Top="510" Height="60" Width="297" Click="btn_ClickInnen" Canvas.Left="27" Background="White"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
